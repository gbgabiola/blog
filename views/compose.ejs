    <form action="/compose" method="post">
      <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" id="postTitle">
        <label for="postBody">Post</label>
        <textarea name="postBody" class="form-control" id="postBody" rows="5" cols="30"></textarea>
      </div>
      <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

